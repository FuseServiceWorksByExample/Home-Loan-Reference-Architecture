<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/panel_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_addr_line_1"
            style="@style/loanmanagement.TopLabel"
            android:text="@string/label_account_number" />

        <EditText
            android:id="@+id/txt_account"
            style="@style/loanmanagement.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include
        layout="@layout/asset"
        android:background="@color/included_layout_background" />

    <include
        layout="@layout/address"
        android:background="@color/included_layout_background" />

</LinearLayout>