<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/slategray3"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/status_bar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contentDescription="@string/status_bar_image_description"
        android:focusable="false" />

    <TextView
        android:id="@+id/status_bar_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="none"
        android:lines="@integer/status_bar_max_lines"
        android:maxLines="@integer/status_bar_max_lines"
        android:textSize="12sp" >
    </TextView>

</LinearLayout>