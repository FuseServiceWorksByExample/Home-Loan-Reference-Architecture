<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="loanmanagement.HorizontalDivider" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/gray40</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <style name="loanmanagement.VerticalDivider" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/gray40</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:maxWidth">2dp</item>
    </style>

    <style name="loanmanagement.Spinner" parent="@android:style/Widget.Spinner.DropDown">
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="loanmanagement.ImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="loanmanagement.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/gray40</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="loanmanagement.ReadonlyText" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/gray40</item>
    </style>

    <style name="loanmanagement.TopLabel" parent="loanmanagement.ReadonlyText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loanmanagement.CheckBox" parent="@android:style/Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/gray40</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loanmanagement.LeftLabel" parent="loanmanagement.TopLabel">
        <item name="android:layout_marginRight">6dp</item>
    </style>

</resources>